<% include ../partials/header %>


<div class="ui container">
    <h1 class="newPost">Create a Post</h1>
    <hr class="blackHr">
    
    <div class="jumbotron postJumbo">
        <form action="/forum" method="POST">
            <div class="ui fluid icon input postInput">
                <input type="text" name="title" placeholder="Title" required>
            </div>
            <div class="ui fluid icon input postInput">
                <input type="text" name="image" placeholder="Image">
            </div>
            <div class="markdown postInput"><strong>Markdown text <i class="fas fa-level-down-alt"></i></strong></div>
            <div>
                <textarea name = "text" rows="15" cols:"50" style="width:100%" class="postTextArea" required></textarea>
            </div>
            <div class="ui buttons saveAdjust">
                <button class="ui positive button" type="submit">Submit</button>
                <div class="or"></div>
                <button class="ui button" type="reset"><a href="/forum">Cancel</a></button>
            </div>
                <!--<input type="text" name="text" placeholder="text">-->
        </form>
    </div>
</div>

<% include ../partials/footer %>